{
  "manifest_version": 2,
  "name": "Helpdesk Assistant",
  "version": "1.0",
  "description": "Chrome extension for helpdesk assistance",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "images/*"
  ],
  "permissions": [
    "*://*/*",
    "<all_urls>"
  ]
}
